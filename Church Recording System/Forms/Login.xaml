<Window x:Class="Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login - Church Recording System" Height="464" Width="568" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Opacity="0.65">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="#FF385BB3" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<Button x:Name="cmdCancel" Content="Cancel" HorizontalAlignment="Right" Height="40" Margin="0,0,12,30" VerticalAlignment="Bottom" Width="144" FontSize="14.667"/>
    	<Button x:Name="cmdLogin" Content="Login" Height="40" Margin="240,0,162,30" VerticalAlignment="Bottom" FontSize="14.667"/>
    	<Label Content="Please login" Margin="32,80,240,0" VerticalAlignment="Top" Height="40" FontSize="21.333" FontFamily="Global Monospace" Background="Transparent" FontWeight="Bold" TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Animated" Foreground="{DynamicResource DisabledBackgroundBrush}"/>
        
    </Grid>
</Window>
